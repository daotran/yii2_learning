{{ use('/app/assets/AppAsset') }}
{{ use('/yii/bootstrap/ActiveForm') }}
{{ register_app_asset() }}
{{ this.beginPage() }}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" style="overflow: hidden;" class="sb-init">
<!--<![endif]-->
<!-- BEGIN HEAD -->
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>Accounting Dashboard - Login</title>
    <link href="{{ app.homeUrl() }}css/style.css" rel="stylesheet">
    <link href="{{ app.homeUrl() }}css/flatlab.css" rel="stylesheet">
    {{ this.head() }}
    {{ html.csrfMetaTags()|raw }}

  </head>
  <body class="login-body">
    <div class="container">
      {% set form = active_form_begin({
        'id' : 'form-signin',
        'options' : {'class' : 'form-signin'},
        'enableClientScript' : false,
        'action' : app.homeUrl() ~ 'site/login'
        })
      %}
        <h2 class="form-signin-heading">sign in now</h2>
        <div class="login-wrap">
          {% if app.getSession().hasFlash('fail') %}
            <div class="flash-message-error">{{ app.getSession().getFlash('fail') }}</div>
          {% endif %}
            <input name="LoginForm[username]" type="text" style="width: 100%;" class="form-control" placeholder="User ID" autofocus>
            <input name="LoginForm[password]" type="password" style="width: 100%;" class="form-control" placeholder="Password">
            <label class="checkbox">
                <input type="checkbox" value="1" name="LoginForm[rememberMe]"> Remember me
                <span class="pull-right" style="float:right;">
                    <a data-toggle="modal" href="#myModal"> Forgot Password?</a>
                </span>
            </label>
            <button class="btn btn-lg btn-login btn-block login_btn" type="submit">Sign in</button>
        </div>
      {{ active_form_end() }}

    </div>
  </body>
</html>
{{ this.endPage() }}

